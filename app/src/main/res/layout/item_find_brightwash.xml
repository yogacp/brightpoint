<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    style="@style/LayoutBrightPointCardview"
    android:id="@+id/layoutItem"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="Carwash"
            android:src="@drawable/ic_carwash"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="@color/bp_grey" />

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemCarwashName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Carwash Slipi"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvItemCarwashDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="3.6 Km"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvItemCarwashAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Jl. Cikini Raya No. 113-115, Cikini, Men..."
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvItemCarwashCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Capacity: 2"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvItemCarwashQueue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Current Queue: 2"
                    android:gravity="right"
                    android:textColor="@color/bp_black"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>